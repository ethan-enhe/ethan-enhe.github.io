 &lt;script type="text/javascript"&gt;  
    var setMyBlog = {
        setCopyright: function() {
            //è®¾ç½®ç‰ˆæƒä¿¡æ¯ï¼Œè½¬è½½å‡ºå¤„è‡ªåŠ¨æ ¹æ®é¡µé¢urlç”Ÿæˆ
            var info_str = '&lt;p&gt;ä½œè€…ï¼š&lt;a target="_blank"&gt;@ethan_zhou&lt;/a&gt;&lt;br&gt;'+
                'æœ¬æ–‡ä¸ºä½œè€…åŸåˆ›ï¼Œè½¬è½½è¯·æ³¨æ˜å‡ºå¤„ï¼š&lt;a class="uri"&gt;&lt;/a&gt;&lt;/p&gt;&lt;hr&gt;&lt;/hr&gt;';
            info = $(info_str);
            info_a = info.find("a");
            url = window.location.href;
            if (url.indexOf("#") &gt;= 0)
                url = url.slice(0, url.indexOf("#"));
            $(info_a[0]).attr("href","https://github.com/ethan-enhe");
            $(info_a[1]).attr("href",url).text(url);
            $("#cnblogs_post_body").prepend(info);
        },
        setCodeRow: function(){
            // ä»£ç è¡Œå·æ˜¾ç¤º
            $("pre code").each(function(){
                $(this).html("&lt;ol&gt;&lt;li&gt;" + $(this).html().replace(/\n/g,"\n&lt;/li&gt;&lt;li&gt;") +"\n&lt;/li&gt;&lt;/ol&gt;");
            });
        },
        setAtarget: function() {
            // åšå®¢å†…çš„é“¾æ¥åœ¨æ–°çª—å£æ‰“å¼€
            $("#cnblogs_post_body a").each(function(){
                this.target = "_blank";
            }) 
        },
        setContent: function() {
            // æ ¹æ®h2ã€h3æ ‡ç­¾è‡ªåŠ¨ç”Ÿæˆç›®å½•
            var captions_ori = $("#cnblogs_post_body h2"),
                captions_ori2 = $("#cnblogs_post_body h3"),
                captions = $("#cnblogs_post_body h2,#cnblogs_post_body h3").clone(),
                content = $("&lt;ul id='right_meun'&gt;&lt;/ul&gt;");
            $("#cnblogs_post_body").prepend(content.append(captions));
            var index = -1,index2 = -1;
            captions.replaceWith(function(){
                var self = this;
                if(self.tagName == "H2" || self.tagName == "h2"){
                    // è®¾ç½®ç‚¹å‡»ç›®å½•è·³è½¬
                    index += 1;
                    $('&lt;a name="' + '_caption_' + index + '"&gt;&lt;/a&gt;').insertBefore(captions_ori[index]); 
                    return '&lt;li id="'+index+'li"&gt;&lt;a href="#_caption_' + index + '"&gt;' + self.innerHTML + '&lt;/a&gt;&lt;ul&gt;&lt;/ul&gt;&lt;/li&gt;';
                } else {
                    // add by BlogE å¢åŠ h3é“¾æ¥è·³è½¬
                    index2 += 1;
                    $('&lt;a name="' + '_caption' + index2 + '"&gt;&lt;/a&gt;').insertBefore(captions_ori2[index2]); 
                    $("#"+index+"li ul").append("&lt;li&gt;&lt;a href='#_caption" + index2 + "' style='color:#5f5f5f;'&gt;" +self.innerHTML+"&lt;/a&gt;&lt;/li&gt;");
                    return ;
                }
            });
        },
        setSearch: function() {
            var search = document.createElement('div');
            search.innerHTML="&lt;input type=\"text\" id=\"q\" onkeydown=\"return zzk_go_enter(event);\" class=\"input_my_zzk\"&gt;&amp;nbsp;&lt;input onclick=\"zzk_go()\" type=\"button\" value=\"æ‰¾æ‰¾çœ‹\" id=\"btnZzk\" class=\"btn_my_zzk\"&gt;";
            search.setAttribute('id','searchblogpost');
            document.getElementById("mynavbar_menu").appendChild(search);
        },
        runAll: function() {
            /* è¿è¡Œæ‰€æœ‰æ–¹æ³•
             * setAtarget() åšå®¢å›­å†…æ ‡ç­¾æ–°çª—å£æ‰“å¼€
             * setContent() è®¾ç½®ç›®å½•ï¼ˆä»…åœ¨çª—å£å¤Ÿå¤§æ—¶ï¼‰
             * setCopyright() è®¾ç½®ç‰ˆæƒä¿¡æ¯
             * setSearch() å¼€å¯ç«™å†…æœ
             * setCodeRow() ä»£ç è¡Œå·æ˜¾ç¤º
             */ 
            this.setAtarget();
            this.setContent();
            this.setCopyright();
            //this.setSearch();
            this.setCodeRow();
        }
    }
    setMyBlog.runAll();
